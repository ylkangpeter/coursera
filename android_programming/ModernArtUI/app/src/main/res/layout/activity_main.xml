<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:theme="@style/AppTheme">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/left_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="#555ea1"
        app:layout_heightPercent="46%"
        app:layout_widthPercent="30%"></android.support.v7.widget.LinearLayoutCompat>

    <!--<View-->
    <!--android:id="@+id/left_up"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_margin="2dp"-->
    <!--android:background="#555ea1"-->
    <!--app:layout_heightPercent="46%"-->
    <!--app:layout_widthPercent="30%" />-->

    <View
        android:id="@+id/right_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/left_up"
        android:background="#8a101b"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="70%" />

    <View
        android:id="@+id/right_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/right_up"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/left_up"
        android:background="#d5d6d6"
        app:layout_heightPercent="31%"
        app:layout_widthPercent="70%" />

    <View
        android:id="@+id/right_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/right_middle"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/left_up"
        android:background="#1e2781"
        app:layout_heightPercent="31%"
        app:layout_widthPercent="70%" />

    <View
        android:id="@+id/left_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/left_up"
        android:layout_margin="2dp"
        android:background="#c03580"
        app:layout_heightPercent="46%"
        app:layout_widthPercent="30%" />

    <SeekBar
        android:id="@+id/seekbar_def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_bottom"
        android:max="100"
        android:progress="0"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />
</android.support.percent.PercentRelativeLayout>